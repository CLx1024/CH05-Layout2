<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/pa01">

    <TextView
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_menu"
        android:gravity="end"
        android:text="13號 劉韋慈"
        android:textSize="16sp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@color/purple_200"
        app:menu="@menu/bottom_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <LinearLayout
        android:id="@+id/m0500d_layout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/m0500_t001"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/m0500_t001"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/fontsize"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/m0500_e001"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:ems="10"
                android:gravity="end"
                android:hint="@string/hint"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textColor="@color/Blue"
                android:textSize="@dimen/fontsize"
                tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

        </TableRow>

        <Button
            android:id="@+id/m0500_b001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/Yellow"
            android:text="@string/m0500_b001"
            android:textColor="@color/Red"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/m0500_t002"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="磅(lb):"
                android:textSize="@dimen/fontsize" />

            <TextView
                android:id="@+id/m0500_t003"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ic_launcher_11_background"
                android:gravity="end"
                android:textSize="@dimen/fontsize" />

        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/m0500f_layout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/m0500f_t001"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/m0500f_t001"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/fontsize"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/m0500f_e001"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:ems="10"
                android:gravity="end"
                android:hint="@string/hintf"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textColor="@color/Blue"
                android:textSize="@dimen/fontsize"
                tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

        </TableRow>

        <Button
            android:id="@+id/m0500f_b001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/Yellow"
            android:text="@string/m0500f_b001"
            android:textColor="@color/Red"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/m0500f_t002"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="台幣(NT$):"
                android:textSize="@dimen/fontsize" />

            <TextView
                android:id="@+id/m0500f_t003"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ic_launcher_11_background"
                android:gravity="end"
                android:textSize="@dimen/fontsize" />

        </TableRow>

    </LinearLayout>


</RelativeLayout>